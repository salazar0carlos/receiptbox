# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Cloud Vision API (for OCR)
# For local development: set GOOGLE_APPLICATION_CREDENTIALS to point to your service account JSON file
# For production (Vercel): set GOOGLE_APPLICATION_CREDENTIALS_JSON to the JSON content as a string
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Google OAuth (for Google Sheets integration)
GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_FAMILY=price_xxx
STRIPE_PRICE_ID_BUSINESS=price_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
